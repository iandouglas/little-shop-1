<h1>Edit Rating</h1>
<div class="welcome-login">

  <%= form_for [:profile, @rating], url: {action: "update"} do |f| %>
    <div class="error-messages"
    <%= f.error_messages %>
    </div>
    <%= f.hidden_field :item_id, value: @rating.item_id %>
    <%= f.hidden_field :user_id, value: @rating.user_id %>

    <%= f.label :title %>
    <%= f.text_field :title, required: true %>

    <%= f.label :description %>
    <%= f.text_area :description, required: true %>

    <%= f.label :rating %>
    <%= f.number_field :rating, required: true, in: 1..5 %>

    <%= f.submit %>

  <% end %>
</div>
